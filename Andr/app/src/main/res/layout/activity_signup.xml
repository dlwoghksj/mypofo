<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/main">

    <!--뒤로가기 툴바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backspace_toolbar"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.backspace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Sign up"
        android:textSize="30sp"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:text="E-mail"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_signup_email"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#A8A8A8"
        android:hint="email을 입력해주세요"
        android:textColor="@color/lesswhite"
        android:textColorHint="#A8A8A8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edit_signup_pw"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#A8A8A8"
        android:hint="영어를 포함한 6자리이상"
        android:textColorHint="#A8A8A8"
        android:textColor="@color/lesswhite"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edit_signup_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#A8A8A8"
        android:hint="3자리 이상"
        android:textColorHint="#A8A8A8"
        android:textColor="@color/lesswhite"
        />

    <Button
        android:id="@+id/btn_signup_submit"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:text="S U B M I T"
        android:textStyle="bold"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button"
        android:textColor="@color/lesswhite"
        >

    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView_result" />

</LinearLayout>
