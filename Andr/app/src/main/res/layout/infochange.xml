<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main">

    <!--뒤로가기 툴바-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backspace_toolbar"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:theme="@style/Theme.backspace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:text="비밀번호 변경"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_infochange_pw1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/edittext"
        android:backgroundTint="@color/edittext"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/et_infochange_pw2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:hint="Password 확인"
        android:inputType="textPassword"
        android:textColorHint="@color/edittext"
        android:backgroundTint="@color/edittext"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="카드사"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@color/white">

        <Spinner
            android:id="@+id/sp_infochange"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:dropDownSelector="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드 번호"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_infochange_card"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint=" - 기호 없이 16자리"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColorHint="@color/edittext"
        android:backgroundTint="@color/edittext"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="CVC"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_infochange_cvc"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:hint="* * *"
        android:inputType="textPassword"
        android:textColorHint="@color/edittext"
        android:backgroundTint="@color/edittext"
        android:textColor="@color/white"
        android:maxLength="3"/>

    <Button
        android:id="@+id/btn_pwch_detail"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button"
        android:textColor="@color/white"
        android:text="S U B M I T" />



</LinearLayout>